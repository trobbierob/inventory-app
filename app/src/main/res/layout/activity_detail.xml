<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.inventoryapp.DetailActivity">


    <ImageSwitcher
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageSwitcher>

    <ImageView
        android:id="@+id/product_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/nose"/>

    <EditText
        android:layout_below="@id/product_profile"
        android:id="@+id/name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of product" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_below="@+id/name_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Quantity: " />


        <TextView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/layout_bg"
            android:text="+"/>

        <EditText
            android:id="@+id/quantity_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="3"
            android:inputType="number"
            android:hint="0"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/layout_bg"
            android:text="-"/>

    </LinearLayout>

    <EditText
        android:layout_below="@id/linear_layout"
        android:id="@+id/price_edit_text"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price of product" />

    <EditText
        android:layout_below="@id/price_edit_text"
        android:id="@+id/email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email of Producer" />

    <EditText
        android:layout_below="@id/email_edit_text"
        android:id="@+id/phone_edit_text"
        android:inputType="phone"
        android:maxLength="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone of Producer" />

    <TextView
        android:id="@+id/type_of_product"
        android:layout_below="@id/phone_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type of Product"/>

    <Button
        android:layout_below="@+id/type_of_product"
        android:id="@+id/photo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Photo" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_below="@id/photo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_addButtonColorNormal="@color/colorAccent"
        fab:fab_addButtonColorPressed="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp">

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>
